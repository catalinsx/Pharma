@model pharma.Models.PacientCreateViewModel

@{
    ViewData["Title"] = "Adaugă pacient";
}

<h2 class="mb-4">Adaugă pacient</h2>

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Nume" class="form-label">Nume</label>
                <input asp-for="Nume" class="form-control" />
                <span asp-validation-for="Nume" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Prenume" class="form-label">Prenume</label>
                <input asp-for="Prenume" class="form-control" />
                <span asp-validation-for="Prenume" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label">Medicamente asociate</label>
                <div class="border p-3 rounded" style="max-height: 300px; overflow-y: auto;">
                    @if (Model.AvailableMedicamente.Any())
                    {
                        @for (int i = 0; i < Model.AvailableMedicamente.Count; i++)
                        {
                            <div class="form-check mb-2">
                                <input type="checkbox"
                                       name="SelectedMedicamentIds"
                                       value="@Model.AvailableMedicamente[i].Id"
                                       class="form-check-input"
                                       id="med_@Model.AvailableMedicamente[i].Id">
                                <label class="form-check-label" for="med_@Model.AvailableMedicamente[i].Id">
                                    @Model.AvailableMedicamente[i].Nume
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Nu există medicamente disponibile. <a asp-controller="Medicament" asp-action="Create">Adaugă primul medicament</a></p>
                    }
                </div>
                <span asp-validation-for="SelectedMedicamentIds" class="text-danger"></span>
                <small class="form-text text-muted">Selectează cel puțin un medicament pentru acest pacient.</small>
            </div>
        </div>
    </div>

    <div class="mb-4">
        <button type="submit" class="btn btn-primary">Salvează</button>
        <a asp-action="Index" class="btn btn-secondary">Renunță</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add some interactivity for better UX
        document.addEventListener('DOMContentLoaded', function () {
            const checkboxes = document.querySelectorAll('input[type="checkbox"][name="SelectedMedicamentIds"]');
            const form = document.querySelector('form');

            form.addEventListener('submit', function (e) {
                const checkedBoxes = Array.from(checkboxes).filter(cb => cb.checked);
                if (checkedBoxes.length === 0) {
                    e.preventDefault();
                    alert('Te rog să selectezi cel puțin un medicament pentru acest pacient.');
                    return false;
                }
            });
        });
    </script>
}