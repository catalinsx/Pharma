@model IEnumerable<pharma.Models.Pacient>

@{
    ViewData["Title"] = "Lista pacienți";
}


<link rel="stylesheet" href="~/lib/datatables/datatables.min.css" />

<h2 class="mb-4">Lista pacienți</h2>

<table id="tabelPacienti" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nume</th>
            <th>Prenume</th>
            <th>Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pacient in Model)
        {
            <tr>
                <td>@pacient.Nume</td>
                <td>@pacient.Prenume</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@pacient.Id" class="btn btn-sm btn-warning">Editează</a>
                    <a asp-action="Details" asp-route-id="@pacient.Id" class="btn btn-sm btn-info">Detalii</a>
                    <a asp-action="Delete" asp-route-id="@pacient.Id" class="btn btn-sm btn-danger">Șterge</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<script src="~/lib/datatables/jquery.min.js"></script>
<script src="~/lib/datatables/datatables.min.js"></script>

<script>
    $(document).ready(function () {
        $('#tabelPacienti').DataTable({
            language: {
                url: '/lib/datatables/i18n/Romanian.json' 
            }
        });
    });
</script>
