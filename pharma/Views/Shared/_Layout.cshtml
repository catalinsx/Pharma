<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Farmacie</title>

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex vh-100 overflow-hidden">
    @{
        var curCtrl = ViewContext.RouteData.Values["controller"]?.ToString();
        var curAct = ViewContext.RouteData.Values["action"]?.ToString();
    }

    <aside class="sidebar flex-shrink-0 d-flex flex-column">
        <div class="sidebar-header">
            <h4 class="mb-0 text-white">Farmacia Universitară Gaudeamus</h4>
        </div>

        <nav class="nav flex-column">
            <!-- Home -->
            <a asp-controller="Home" asp-action="Index"
               class="nav-link d-flex align-items-center @(curCtrl == "Home" ? "active" : "")">
                <i class="fas fa-home me-3"></i>
                <span>Acasă</span>
            </a>

            <!-- Pacienți Section -->
            <div class="section-title">
                <i class="fas fa-user me-1"></i> Pacienți
            </div>
            <a asp-controller="Pacient" asp-action="Index"
               class="nav-link d-flex align-items-center @(curCtrl == "Pacient" && curAct != "Create" ? "active" : "")">
                <i class="fas fa-users me-3"></i>
                <span>Lista pacienți</span>
            </a>
            <a asp-controller="Pacient" asp-action="Create"
               class="nav-link d-flex align-items-center @(curCtrl == "Pacient" && curAct == "Create" ? "active" : "")">
                <i class="fas fa-user-plus me-3"></i>
                <span>Adaugă pacient</span>
            </a>

            <!-- Medicamente Section -->
            <div class="section-title">
                <i class="fas fa-pills me-1"></i> Medicamente
            </div>
            <a asp-controller="Medicament" asp-action="Index"
               class="nav-link d-flex align-items-center @(curCtrl == "Medicament" && curAct != "Create" ? "active" : "")">
                <i class="fas fa-capsules me-3"></i>
                <span>Lista medicamente</span>
            </a>
            <a asp-controller="Medicament" asp-action="Create"
               class="nav-link d-flex align-items-center @(curCtrl == "Medicament" && curAct == "Create" ? "active" : "")">
                <i class="fas fa-plus-square me-3"></i>
                <span>Adaugă medicament</span>
            </a>
        </nav>
    </aside>

    <main class="flex-grow-1 bg-light p-4 overflow-auto">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
