@model pharma.Models.Medicament

@{
    ViewData["Title"] = $"Medicament: {Model.Nume}";
}

<div class="container d-flex flex-column align-items-center py-5">

    <h2 class="mb-5 text-center">
        Medicament: <strong>@Model.Nume</strong>
    </h2>

    <div class="row gx-4 gy-4 justify-content-center w-100">
        <!-- Add new prescription -->
        <div class="col-12 col-sm-8 col-md-5 col-lg-4">
            <a asp-controller="Reteta" asp-action="Create" asp-route-medId="@Model.Id" class="text-decoration-none">
                <div class="card action-card h-100">
                    <div class="card-body d-flex flex-column justify-content-center text-center">
                        <i class="fas fa-file-medical fa-3x mb-3 text-primary"></i>
                        <h4 class="card-title">Adaugă rețetă nouă</h4>
                        <p class="card-text text-muted">
                            Completează detaliile și programează următoarea vizită
                        </p>
                    </div>
                </div>
            </a>
        </div>

        <!-- View all prescriptions -->
        <div class="col-12 col-sm-8 col-md-5 col-lg-4">
            <a asp-controller="Reteta" asp-action="Index" asp-route-medId="@Model.Id" class="text-decoration-none">
                <div class="card action-card h-100">
                    <div class="card-body d-flex flex-column justify-content-center text-center">
                        <i class="fas fa-list fa-3x mb-3 text-success"></i>
                        <h4 class="card-title">Vezi toate rețetele</h4>
                        <p class="card-text text-muted">
                            Filtrează după pacient (nume, prenume)
                        </p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .action-card {
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        background: #fff;
    }

        .action-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
        }

        .action-card .card-title {
            margin-bottom: .5rem;
        }

        .action-card .card-text {
            font-size: .95rem;
        }
</style>
